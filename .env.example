# Application Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hire4recruit
DB_NAME=hire4recruit

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Email Service Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=Hire4Recruit
SMTP_FROM_EMAIL=noreply@hire4recruit.com

# Redis Configuration (for Queue Service)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Google AI (Gemini) Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# Google Calendar Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_ACCESS_TOKEN=your-access-token
GOOGLE_EXPIRY_DATE=timestamp

# Microsoft Graph (Outlook Calendar) Configuration
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
COOKIE_SECRET=your-cookie-secret-here

# Third-party Integrations
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Calendar Service Default Timezone
DEFAULT_TIMEZONE=UTC

# Queue Configuration
QUEUE_CONCURRENCY_WORKFLOW=5
QUEUE_CONCURRENCY_EMAIL_HIGH=3
QUEUE_CONCURRENCY_EMAIL_NORMAL=10
QUEUE_CONCURRENCY_EMAIL_LOW=2
QUEUE_CONCURRENCY_SCHEDULE=3
QUEUE_CONCURRENCY_NOTIFICATION=8

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
CLEANUP_INTERVAL_MINUTES=60
QUEUE_CLEANUP_ENABLED=true

# Workflow Configuration
AUTO_ADVANCE_ENABLED=true
DEFAULT_STAGE_TIMEOUT_HOURS=72
WORKFLOW_ANALYTICS_ENABLED=true

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# AI Features
AI_PERSONALIZATION_ENABLED=true
AI_RESUME_PARSING_ENABLED=true
AI_CANDIDATE_MATCHING_ENABLED=true
AI_INTERVIEW_QUESTIONS_ENABLED=true
AI_JOB_DESCRIPTION_GENERATION_ENABLED=true

# Development/Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_EMAIL_SENDING=false
MOCK_CALENDAR_EVENTS=false

# Performance Settings
DB_CONNECTION_POOL_SIZE=10
CACHE_TTL_SECONDS=3600
API_TIMEOUT_SECONDS=30

# Monitoring and Health Checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_MINUTES=5
METRICS_ENABLED=false

# Backup and Maintenance
AUTO_BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
MAINTENANCE_WINDOW_START=02:00
MAINTENANCE_WINDOW_END=04:00