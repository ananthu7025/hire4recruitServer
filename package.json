{
  "name": "hire4recruit",
  "version": "1.0.0",
  "description": "hire4recruit is a comprehensive recruitment management system that helps organizations streamline their hiring process. This document provides detailed specifications for building a robust and intelligent backend API using **Node.js**, **MongoDB**, and **TypeScript**. This enhanced version (v2.0) incorporates a suite of **Gemini-powered AI features** to automate tasks, provide predictive insights, and significantly boost recruiter efficiency.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "NODE_ENV=test-verbose jest --verbose",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "docs:build": "swagger-cli bundle docs/swagger.yaml --outfile dist/swagger.json --dereference",
    "docs:validate": "swagger-cli validate docs/swagger.yaml",
    "docs:serve": "npm run docs:build && swagger-ui-serve dist/swagger.json",
    "docs:redoc": "redoc-cli build dist/swagger.json --output dist/docs/index.html",
    "docs:generate": "npm run docs:validate && npm run docs:build && npm run docs:redoc"
  },
